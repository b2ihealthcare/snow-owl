	<build>
		<plugins>
			<plugin>
				<groupId>org.jacoco</groupId>
				<artifactId>jacoco-maven-plugin</artifactId>
				<version>${jacoco.version}</version>
				<executions>
					<execution>
						<phase>verify</phase>
						<goals>
							<goal>report-aggregate</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho.extras</groupId>
				<artifactId>tycho-document-bundle-plugin</artifactId>
				<version>${tycho-extras.version}</version>
				<executions>
					<execution>
						<id>api-docs</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>javadoc</goal>
						</goals>
						<configuration>
							<outputDirectory>${siteOutputDirectory}/api-docs</outputDirectory>
							<skipTocGen>true</skipTocGen>
							<scopes>compile</scopes>
							<javadocOptions>
								<additionalArguments>
									<additionalArgument>${javadoc-args}</additionalArgument>
									<additionalArgument>
										-link
										https://docs.oracle.com/en/java/javase/11/docs/api/index.html
									</additionalArgument>
									<additionalArgument>-quiet</additionalArgument>
									<additionalArgument>-windowtitle "Snow Owl"</additionalArgument>
								</additionalArguments>
								<includes>
									<include>com.b2international*</include>
								</includes>
								<excludes>
									<exclude>*internal*</exclude>
								</excludes>
							</javadocOptions>
						</configuration>
					</execution>
					<!-- Scripting distilled API documentation -->
					<execution>
						<id>scripting-api-docs</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>javadoc</goal>
						</goals>
						<configuration>
							<outputDirectory>${siteOutputDirectory}/scripting-api-docs</outputDirectory>
							<skipTocGen>true</skipTocGen>
							<scopes>compile</scopes>
							<javadocOptions>
								<additionalArguments>
									<additionalArgument>${javadoc-args}</additionalArgument>
									<additionalArgument>
										-link
										https://docs.oracle.com/en/java/javase/11/docs/api/index.html
									</additionalArgument>
									<additionalArgument>-quiet</additionalArgument>
									<additionalArgument>-windowtitle "Snow Owl Scripting API"</additionalArgument>
								</additionalArguments>
								<includes>
									<include>com.b2international.snowowl.core.branch</include>
									<include>com.b2international.snowowl.core.branch.compare</include>
									<include>com.b2international.snowowl.core.codesystem</include>
									<include>com.b2international.snowowl.core.codesystem.version</include>
									<include>com.b2international.snowowl.core.commit</include>
									<include>com.b2international.snowowl.core.request</include>
									<include>com.b2international.snowowl.core.jobs</include>
									<include>com.b2international.snowowl.core.repository</include>
									<include>com.b2international.snowowl.core.version</include>
									<include>com.b2international.snowowl.snomed.datastore.request</include>
									<include>com.b2international.snowowl.snomed.datastore.request.dsv</include>
									<include>com.b2international.snowowl.snomed.datastore.request.rf2</include>
									<include>com.b2international.snowowl.snomed.datastore.id.request</include>
									<include>com.b2international.snowowl.snomed.core.domain</include>
								</includes>
							</javadocOptions>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>


<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<artifactId>com.b2international.snowowl.server.update</artifactId>
	<packaging>eclipse-repository</packaging>

	<parent>
		<groupId>com.b2international.snowowl</groupId>
		<artifactId>releng-parent</artifactId>
		<version>6.28.2-SNAPSHOT</version>
	</parent>
	
	<dependencies>
		<dependency>
  			<groupId>org.apache.sshd</groupId>
  			<artifactId>sshd-core</artifactId>
  			<version>0.14.0</version>
		</dependency>
		<dependency>
			<groupId>org.semanticweb.elk</groupId>
			<artifactId>elk-protege</artifactId>
			<version>${elk.version}</version>
		</dependency>
	</dependencies>

	<build>
		<finalName>snowowl-${customer}_${build.version}</finalName>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>prepare</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target>
								<echo message="Unzipping Virgo archive..." />
								<unzip src="assembly/virgo-tomcat-server-3.7.2.RELEASE.zip"
									dest="target/" />
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-director-plugin</artifactId>
				<executions>
					<execution>
						<id>materialize-products</id>
						<goals>
							<goal>materialize-products</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>package-h2</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<workDirectory>${project.build.directory}/assembly/h2</workDirectory>
							<descriptor>${basedir}/assembly/h2.xml</descriptor>
						</configuration>
					</execution>
					<execution>
						<id>package-mysql</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<workDirectory>${project.build.directory}/assembly/mysql</workDirectory>
							<descriptor>${basedir}/assembly/mysql.xml</descriptor>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>de.dentrassi.maven</groupId>
				<artifactId>rpm</artifactId>
				<version>0.8.0</version>
				<executions>
					<execution>
						<id>generate-rpm</id>
						<goals>
							<goal>rpm</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<attach>true</attach>
					<group>Unspecified</group>
					<packageName>snowowl-${customer}</packageName>
					<architecture>x86_64</architecture>
					<skipSigning>true</skipSigning>
					<rulesets>
						<ruleset>
							<id>rpm-default</id>
							<rules>
								<rule>
									<user>snowowl</user>
									<group>snowowl</group>
								</rule>
								<rule>
									<when>
										<prefix>/opt/snowowl-${customer}/snowowl_config.yml</prefix>
										<type>file</type>
									</when>
									<when>
										<prefix>/opt/snowowl-${customer}/configuration/</prefix>
										<type>file</type>
									</when>
									<configuration>true</configuration>
								</rule>
								<rule>
									<when>
										<type>directory</type>
									</when>
									<mode>0755</mode>
								</rule>
								<rule>
									<when>
										<type>file</type>
									</when>
									<mode>0644</mode>
								</rule>
								<rule>
									<when>
										<prefix>/opt/snowowl-${customer}/bin/</prefix>
										<type>file</type>
									</when>
									<mode>0755</mode>
								</rule>
							</rules>
						</ruleset>
					</rulesets>
					<entries>
						<entry>
							<name>/opt/snowowl-${customer}</name>
							<ruleset>rpm-default</ruleset>
							<collect>
								<from>${project.build.directory}/${project.build.finalName}-mysql/${project.build.finalName}</from>
							</collect>
						</entry>
					</entries>
					<prerequisites>
						<prererequisite>shadow-utils</prererequisite>
					</prerequisites>
					<beforeInstallation>
						<script>
							getent group snowowl >/dev/null || groupadd -r snowowl
							getent passwd USERNAME >/dev/null || \
								useradd -r -g snowowl -d /opt/snowowl-${customer} -s /sbin/nologin \
    							-c "Snow Owl Server" snowowl
    						exit 0
						</script>
					</beforeInstallation>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>m2e</id>
			<!-- This profile is only activated when building in Eclipse with m2e -->
			<activation>
				<property>
					<name>m2e.version</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-resources-plugin</artifactId>
						<version>2.4.3</version>
						<executions>
							<execution>
								<id>copy-configuration-users</id>
								<phase>process-classes</phase>
								<goals>
									<goal>copy-resources</goal>
								</goals>
								<configuration>
									<resources>
										<resource>
											<directory>assembly/common/configuration</directory>
											<includes>
												<include>users</include>
											</includes>
										</resource>
									</resources>
									<outputDirectory>${basedir}/runtime/configuration</outputDirectory>
								</configuration>
							</execution>
							<execution>
								<id>copy-configuration-snow-owl-config-yml</id>
								<phase>process-classes</phase>
								<goals>
									<goal>copy-resources</goal>
								</goals>
								<configuration>
									<resources>
										<resource>
											<directory>assembly/h2</directory>
											<includes>
												<include>snowowl_config.yml</include>
											</includes>
										</resource>
									</resources>
									<outputDirectory>${basedir}/runtime</outputDirectory>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
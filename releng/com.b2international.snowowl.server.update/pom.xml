<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<artifactId>com.b2international.snowowl.server.update</artifactId>
	<packaging>eclipse-repository</packaging>

	<parent>
		<groupId>com.b2international.snowowl</groupId>
		<artifactId>releng-parent</artifactId>
		<version>7.11.1</version>
	</parent>
	
	<properties>
		<packageFiles>${project.build.directory}/${project.build.finalName}-oss/${project.build.finalName}</packageFiles>
		<product.rootFolder>snow-owl-oss-${build.version}</product.rootFolder>
		<products.directory>${project.build.directory}/products</products.directory>
		<product.id>com.b2international.snowowl.server</product.id>
		<so.products.directory>${products.directory}/${product.id}</so.products.directory>
		<linux.product.path>${so.products.directory}/linux/gtk/x86_64/${product.rootFolder}</linux.product.path>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.semanticweb.elk</groupId>
			<artifactId>elk-protege</artifactId>
			<version>${elk.version}</version>
		</dependency>
	</dependencies>

	<build>
		<finalName>snow-owl-oss-${build.version}</finalName>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-p2-director-plugin</artifactId>
				<executions>
					<execution>
						<id>materialize-products</id>
						<goals>
							<goal>materialize-products</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<products>
						<product>
							<id>${product.id}</id>
							<rootFolder>${product.rootFolder}</rootFolder>
						</product>
					</products>
				</configuration>
			</plugin>
			<!-- create site and server zip, tar.gz and RPM/Deb base folder -->
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>package-oss</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<workDirectory>${project.build.directory}/assembly/oss</workDirectory>
							<descriptor>${basedir}/assembly/oss.xml</descriptor>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<!-- create RPM -->
			<plugin>
				<groupId>de.dentrassi.maven</groupId>
				<artifactId>rpm</artifactId>
				<version>1.3.0</version>
				<executions>
					<execution>
						<id>generate-rpm</id>
						<goals>
							<goal>rpm</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<targetDir>${project.build.directory}</targetDir>
					<attach>true</attach>
					<packageName>snow-owl-oss</packageName>
					<group>Application/Internet</group>
					<packager>B2i Healthcare</packager>
					<license>Apache-2.0</license>
					<architecture>x86_64</architecture>
					<skipSigning>true</skipSigning>
					<prefixes>
						<prefix>/usr</prefix>
					</prefixes>
					<rulesets>
						<ruleset>
							<id>install</id>
							<rules>
								<rule>
									<user>snowowl</user>
									<group>snowowl</group>
								</rule>
								<rule>
									<when>
										<type>directory</type>
									</when>
									<mode>0755</mode>
								</rule>
								<rule>
									<when>
										<type>file</type>
									</when>
									<mode>0644</mode>
								</rule>
								<rule>
									<when>
										<prefix>/usr/share/snowowl/bin/</prefix>
										<type>file</type>
									</when>
									<mode>0755</mode>
								</rule>
							</rules>
						</ruleset>
						<ruleset>
							<id>config</id>
							<rules>
								<rule>
									<user>snowowl</user>
									<group>snowowl</group>
								</rule>
								<rule>
									<when>
										<type>file</type>
									</when>
									<noreplace>true</noreplace>
									<configuration>true</configuration>
									<mode>0660</mode>
								</rule>
							</rules>
						</ruleset>
						<ruleset>
							<id>data</id>
							<rules>
								<rule>
									<user>snowowl</user>
									<group>snowowl</group>
								</rule>
								<rule>
									<when>
										<type>file</type>
									</when>
									<noreplace>true</noreplace>
									<mode>0644</mode>
								</rule>
								<rule>
									<when>
										<type>directory</type>
									</when>
									<mode>0775</mode>
								</rule>
							</rules>
						</ruleset>
					</rulesets>
					<entries>
						<!-- Installation directory -->
						<entry>
							<name>/usr/share/snowowl</name>
							<user>snowowl</user>
							<group>snowowl</group>
							<mode>0755</mode>
							<directory>true</directory>
						</entry>
						<entry>
							<name>/usr/share/snowowl</name>
							<ruleset>install</ruleset>
							<collect>
								<from>${packageFiles}</from>
								<excludes>
									<exclude>serviceability/**</exclude>
									<exclude>resources/**</exclude>
									<exclude>configuration/**</exclude>
									<exclude>.gitignore</exclude>
								</excludes>
							</collect>
						</entry>
						<!-- Configuration directory -->
						<entry>
							<name>/etc/snowowl</name>
							<user>snowowl</user>
							<group>snowowl</group>
							<mode>0775</mode>
							<directory>true</directory>
						</entry>
						<entry>
							<name>/etc/snowowl</name>
							<ruleset>config</ruleset>
							<collect>
								<from>${packageFiles}/configuration</from>
							</collect>
						</entry>
						<entry>
							<name>/usr/share/snowowl/configuration</name>
							<user>snowowl</user>
							<group>snowowl</group>
							<mode>0775</mode>
							<linkTo>/etc/snowowl</linkTo>
						</entry>
						<!-- Data directory -->
						<entry>
							<name>/var/lib/snowowl</name>
							<user>snowowl</user>
							<group>snowowl</group>
							<mode>0775</mode>
							<directory>true</directory>
						</entry>	
						<entry>
							<name>/var/lib/snowowl</name>
							<ruleset>data</ruleset>
							<collect>
								<from>${packageFiles}/resources</from>
								<excludes>
									<exclude>.gitignore</exclude>
								</excludes>
							</collect>
						</entry>
						<entry>
							<name>/usr/share/snowowl/resources</name>
							<user>snowowl</user>
							<group>snowowl</group>
							<mode>0775</mode>
							<linkTo>/var/lib/snowowl</linkTo>
						</entry>
						<!-- Log directory -->
						<entry>
							<name>/var/log/snowowl</name>
							<user>snowowl</user>
							<group>snowowl</group>
							<mode>0775</mode>
							<directory>true</directory>
						</entry>
						<entry>
							<name>/usr/share/snowowl/serviceability</name>
							<user>snowowl</user>
							<group>snowowl</group>
							<mode>0775</mode>
							<linkTo>/var/log/snowowl</linkTo>
						</entry>
						<!-- SysV configuration -->
						<entry>
							<name>/etc/init.d/snowowl</name>
							<configuration>true</configuration>
							<noreplace>true</noreplace>
							<mode>0750</mode>
							<file>${basedir}/packages/rpm/init.d/snowowl</file>
						</entry>
						<!-- systemd configuration -->
						<entry>
							<name>/usr/lib/sysctl.d/snowowl.conf</name>
							<configuration>true</configuration>
							<noreplace>true</noreplace>
							<mode>0644</mode>
							<file>${basedir}/packages/common/systemd/sysctl/snowowl.conf</file>
						</entry>
						<entry>
							<name>/usr/lib/systemd/system/snowowl.service</name>
							<noreplace>true</noreplace>
							<mode>0644</mode>
							<file>${basedir}/packages/common/systemd/snowowl.service</file>							
						</entry>
					</entries>
					<prerequisites>
						<prererequisite>shadow-utils</prererequisite>
					</prerequisites>
					<beforeInstallation>
						<file>${basedir}/packages/common/scripts/preinst</file>
					</beforeInstallation>
				</configuration>
			</plugin>
			<!-- Create deb -->
			<plugin>
				<groupId>org.vafer</groupId>
				<artifactId>jdeb</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>generate-deb</id>
						<phase>package</phase>
						<goals>
							<goal>jdeb</goal>
						</goals>
						<configuration>
							<deb>${project.build.directory}/${product.rootFolder}-all.deb</deb>
							<controlDir>${project.basedir}/packages/common/scripts</controlDir>
							<snapshotExpand>true</snapshotExpand>
							<snapshotEnv>BUILD_NUMBER</snapshotEnv>
							<verbose>true</verbose>
							<classifier>deb</classifier>
							<signPackage>false</signPackage>
							<skipPOMs>false</skipPOMs>
							<dataSet>
								<!-- Installation directory -->
								<data>
									<src>${packageFiles}</src>
									<type>directory</type>
									<excludes>serviceability/**,resources/**,.gitignore</excludes>
									<mapper>
										<type>perm</type>
										<prefix>/usr/share/snowowl</prefix>
										<user>snowowl</user>
										<group>snowowl</group>
									</mapper>
								</data>
								<!-- Configuration directory -->
								<data>
									<src>${packageFiles}/configuration</src>
									<dst>/etc/snowowl</dst>
									<type>directory</type>
									<conffile>true</conffile>
									<mapper>
										<type>perm</type>
										<user>snowowl</user>
										<group>snowowl</group>
										<filemode>0660</filemode>
									</mapper>
								</data>
								<!-- Data directory -->
								<data>
									<src>${packageFiles}/resources</src>
									<dst>/var/lib/snowowl</dst>
									<type>directory</type>
									<excludes>.gitignore</excludes>
									<mapper>
										<type>perm</type>
										<user>snowowl</user>
										<group>snowowl</group>
										<filemode>0755</filemode>
										<dirmode>0755</dirmode>
									</mapper>
								</data>	
								<data>
									<linkName>/usr/share/snowowl/resources</linkName>
									<linkTarget>/var/lib/snowowl</linkTarget>
									<type>link</type>
									<symlink>true</symlink>
									<mapper>
										<type>perm</type>
										<user>snowowl</user>
										<group>snowowl</group>
									</mapper>
								</data>
								<!-- Log directory -->
								<data>
									<linkName>/usr/share/snowowl/serviceability</linkName>
									<linkTarget>/var/log/snowowl</linkTarget>
									<type>link</type>
									<symlink>true</symlink>
									<mapper>
										<type>perm</type>
										<user>snowowl</user>
										<group>snowowl</group>
										<filemode>0644</filemode>
										<dirmode>0755</dirmode>
									</mapper>
								</data>
								<!-- SysV configuration -->
								<entry>
									<src>${basedir}/packages/deb/init.d/</src>
									<type>directory</type>
									<mapper>
										<type>perm</type>
										<prefix>/etc/init.d</prefix>
										<user>snowowl</user>
										<group>snowowl</group>
										<filemode>0750</filemode>
									</mapper>
								</entry>
								<!-- systemd configuration -->
								<entry>
									<src>${basedir}/packages/common/systemd/sysctl/snowowl.conf</src>
									<type>file</type>
									<dst>/usr/lib/sysctl.d/snowowl.conf</dst>
									<conffile>true</conffile>
									<mapper>
										<type>perm</type>
										<user>snowowl</user>
										<group>snowowl</group>
										<filemode>0644</filemode>
									</mapper>
								</entry>
								<entry>
									<src>${basedir}/packages/common/systemd/snowowl.service</src>
									<dst>/usr/lib/systemd/system/snowowl.service</dst>
									<type>file</type>
									<conffile>true</conffile>
									<mapper>
										<type>perm</type>
										<filemode>0644</filemode>
									</mapper>
								</entry>
							</dataSet>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>m2e</id>
			<!-- This profile is only activated when building in Eclipse with m2e -->
			<activation>
				<property>
					<name>m2e.version</name>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-resources-plugin</artifactId>
						<version>2.4.3</version>
						<executions>
							<execution>
								<id>copy-configuration-users</id>
								<phase>process-classes</phase>
								<goals>
									<goal>copy-resources</goal>
								</goals>
								<configuration>
									<resources>
										<resource>
											<directory>assembly/common/configuration</directory>
											<includes>
												<include>users</include>
												<include>snowowl.yml</include>
												<include>serviceability.xml</include>
												<include>jetty*.xml</include>
											</includes>
										</resource>
									</resources>
									<outputDirectory>${basedir}/runtime/configuration</outputDirectory>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

</project>
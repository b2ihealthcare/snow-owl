<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.b2international.snowowl</groupId>
		<version>5.11.1</version>
		<artifactId>snomed-parent</artifactId>
	</parent>
	<artifactId>com.b2international.snowowl.snomed.datastore.tests</artifactId>
	<packaging>eclipse-test-plugin</packaging>
	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<dependency-resolution>
						<extraRequirements>
							<requirement>
								<type>eclipse-plugin</type>
								<id>ch.qos.logback.classic</id>
								<versionRange>[1.0.7,1.0.8)</versionRange>
							</requirement>
							<requirement>
								<type>eclipse-plugin</type>
								<id>ch.qos.logback.core</id>
								<versionRange>[1.0.7,1.0.8)</versionRange>
							</requirement>
							<requirement>
								<type>eclipse-plugin</type>
								<id>ch.qos.logback.slf4j</id>
								<versionRange>[1.0.7,1.0.8)</versionRange>
							</requirement>
							<requirement>
								<type>eclipse-plugin</type>
								<id>com.b2international.snowowl.logging.logbackconfiguration</id>
								<versionRange>0.0.0</versionRange>
							</requirement>
							<requirement>
								<type>eclipse-plugin</type>
								<id>com.b2international.index.lucene</id>
								<versionRange>0.0.0</versionRange>
							</requirement>
							<requirement>
								<type>eclipse-plugin</type>
								<id>com.b2international.collections.fastutil</id>
								<versionRange>0.0.0</versionRange>
							</requirement>
							<requirement>
								<type>eclipse-plugin</type>
								<id>com.sun.el</id>
								<versionRange>0.0.0</versionRange>
							</requirement>
						</extraRequirements>
					</dependency-resolution>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-surefire-plugin</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<includes>
						<include>**/AllSnomedDatastoreTests.java</include>
					</includes>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>

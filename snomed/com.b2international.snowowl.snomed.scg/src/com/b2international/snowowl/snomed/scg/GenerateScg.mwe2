Workflow {
	
	component = XtextGenerator {
		configuration = {
			project = StandardProjectConfig {
				baseName = "com.b2international.snowowl.snomed.scg"
				rootPath = rootPath
				 genericIde = {
                    enabled = true
                    // Set relative path of IDE project here 
                    root = "../../../snow-owl-ext/snomed-ui/com.b2international.snowowl.snomed.scg.ui"

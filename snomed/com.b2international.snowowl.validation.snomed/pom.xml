<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>com.b2international.snowowl.validation.snomed</artifactId>
	<packaging>eclipse-test-plugin</packaging>
	
	<parent>
		<groupId>com.b2international.snowowl</groupId>
		<artifactId>snomed-parent</artifactId>
		<version>7.4.0-SNAPSHOT</version>
	</parent>
	
	<properties>
		<skip.validation.tests>false</skip.validation.tests>
	</properties>

	<profiles>
		<profile>
			<id>travis-ci</id>
			<properties>
				<skip.validation.tests>true</skip.validation.tests>
			</properties>
		</profile>
	</profiles>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<dependency-resolution>
						<extraRequirements>
							<requirement>
								<type>eclipse-plugin</type>
								<id>com.b2international.collections.fastutil</id>
								<versionRange>0.0.0</versionRange>
							</requirement>
							<requirement>
								<type>eclipse-plugin</type>
								<id>com.b2international.snowowl.identity.file</id>
								<versionRange>0.0.0</versionRange>
							</requirement>
							<requirement>
								<type>eclipse-plugin</type>
								<id>com.b2international.scripting.groovy</id>
								<versionRange>0.0.0</versionRange>
							</requirement>
						</extraRequirements>
					</dependency-resolution>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-surefire-plugin</artifactId>
				<executions>
					<execution>
            			<id>snomed-validation-tests</id>
				        <goals>
				        	<goal>test</goal>
				        </goals>
						<configuration>
							<argLine>${tycho.testArgLine} -Xms1g -Xmx1g -XX:+UseConcMarkSweepGC -XX:CMSInitiatingOccupancyFraction=75 -XX:+UseCMSInitiatingOccupancyOnly -XX:+AlwaysPreTouch</argLine>
							<includes>
								<include>**/AllGenericValidationTests.java</include>
							</includes>
							<skipTests>${skip.validation.tests}</skipTests>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
